[Unit]
Description=PostgreSQL Exporter
Wants=network-online.target
After=network-online.target

[Service]
User={{ postgres_exporter_user }}
Group={{ postgres_exporter_group }}
Environment=DATA_SOURCE_NAME=postgresql://postgres_exporter@{{ postgres_exporter_host }}:{{ postgres_exporter_port }}/{{ postgres_exporter_db }}?sslmode=disable
ExecStart={{ postgres_exporter_bin_path }}

Restart=always
SyslogIdentifier=postgres_exporter

[Install]
WantedBy=multi-user.target
